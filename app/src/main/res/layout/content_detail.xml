<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context="com.mikeart.yamusicmike.DetailActivity">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/coverBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/detail_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coverBig"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/genres"/>

        <TextView
            android:id="@+id/detail_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_genres"
            android:layout_alignLeft="@+id/detail_genres"
            android:layout_alignStart="@+id/detail_genres"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/albums"/>

        <TextView
            android:id="@+id/detail_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detail_albums"
            android:layout_toRightOf="@+id/detail_albums"
            android:layout_toEndOf="@+id/detail_albums"
            android:textSize="@dimen/tracks"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Биография"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/detail_albums"
            android:layout_alignLeft="@+id/detail_albums"
            android:layout_alignStart="@+id/detail_albums"
            android:textSize="@dimen/bio"
            android:textColor="@color/bio"/>

        <TextView
            android:id="@+id/detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/description"
            android:textSize="@dimen/description"
            />


    </RelativeLayout>
</ScrollView>
